extends layout

block content
  .container
    .card
      .container-fluid
        .wrapper.row
          .preview.col-md-6
            .preview-pic.tab-content
              #pic-1.tab-pane.active
                img(src=product.picture)  
          .details.col-md-6
            .title-wrapper
              h3.product-title= product.name   
              button.like.btn.btn-default(type='button')
                span.fa.fa-heart
            .rating
              .stars
                - for (let i = 0; i < product.rating; i++)
                  span.fa.fa-star.checked
                - for (let i = 0; i < 5 - product.rating; i++)
                  span.fa.fa-star
            p.product-description= product.description 
            .action
              button.add-to-cart.btn.btn-default(type='button') Care guiding tips
            h4.price
              | Level   
              span= product.careGuide.level   
            h4.price
              | Temperature   
              span= product.careGuide.temperature
            h4.price
              | Light     
              span= product.careGuide.light
            h4.price
              | Watering   
              span= product.careGuide.water
            h4.price
              | Fertilizing   
              span= product.careGuide.fertilize
            h4.price
              | Bloom time   
              span= product.careGuide.bloomTime
            p.vote
              strong= product.votes
              | PrettyPetals club members enjoyed this flower!
              strong (#{product.votes} votes)

