extends layout

block content
  .container
    .main
      .main-center
        h5= info.title  
        form(method='post', action='#')
          .form-group
            label(for='firstName') First Name
            .input-group
              span.input-group-addon
                i.fa.fa-user.fa(aria-hidden='true')
              input#firstName.form-control(type='text', name='firstName', placeholder=info.form.firstName.placeholder)
          .form-group
            label(for='lastName') Last Name
            .input-group
              span.input-group-addon
                i.fa.fa-user.fa(aria-hidden='true')
              input#lastName.form-control(type='text', name='lastName', placeholder=info.form.lastName.placeholder)
          .form-group
            label(for='username') Username
            .input-group
              span.input-group-addon
                i.fa.fa-users.fa(aria-hidden='true')
              input#username.form-control(type='text', name='username', placeholder=info.form.username.placeholder)
          .form-group
            label(for='email') E-mail
            .input-group
              span.input-group-addon
                i.fa.fa-envelope.fa(aria-hidden='true')
              input#email.form-control(type='email', name='email', placeholder=info.form.email.placeholder)
          .form-group
            label(for='password') Password
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#password.form-control(type='password', name='password', placeholder=info.form.password.placeholder)
          .form-group
            label(for='confirm') Repeat Password
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#confirm.form-control(type='password', name='confirm', placeholder=info.form.confirm.placeholder)
          .form-group
            label(for='favouriteFlower') Favourite Flower
            .input-group
              span.input-group-addon
                i.fa.fa-flower.fa(aria-hidden='true')
              input#favouriteFlower.form-control(type='text', name='favouriteFlower', placeholder=info.form.favouriteFlower.placeholder)
          button(type='submit') Sign Up
