extends layout

block content
  .container
    .main
      .main-center
        h5 Registration
        form(method='post', action='#')
          .form-group
            label(for='firstName') First Name
            .input-group
              span.input-group-addon
                i.fa.fa-user.fa(aria-hidden='true')
              input#firstName.form-control(type='text', name='firstName', placeholder='Enter your First Name')
          .form-group
            label(for='lastName') Last Name
            .input-group
              span.input-group-addon
                i.fa.fa-user.fa(aria-hidden='true')
              input#lastName.form-control(type='text', name='lastName', placeholder='Enter your Last Name')
          .form-group
            label(for='username') Username
            .input-group
              span.input-group-addon
                i.fa.fa-users.fa(aria-hidden='true')
              input#username.form-control(type='text', name='username', placeholder='Enter your Username')
          .form-group
            label(for='email') E-mail
            .input-group
              span.input-group-addon
                i.fa.fa-envelope.fa(aria-hidden='true')
              input#email.form-control(type='email', name='email', placeholder='Enter your E-mail')
          .form-group
            label(for='password') Password
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#password.form-control(type='password', name='password', placeholder='Enter your Password')
          .form-group
            label(for='confirm') Repeat password
            .input-group
              span.input-group-addon
                i.fa.fa-lock.fa-lg(aria-hidden='true')
              input#confirm.form-control(type='password', name='confirm', placeholder='Repeat your Password')
          .form-group
            label(for='favouriteFlower') Favourite flower
            .input-group
              span.input-group-addon
                i.fa.fa-flower.fa(aria-hidden='true')
              input#favouriteFlower.form-control(type='text', name='favouriteFlower', placeholder='Enter your Favourite flower')
          button(type='submit') Sign up
        // main-center
      // main
    // container